    "tsoa": "^6.6.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.1",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
